#!/usr/bin/env bash

# Install nginx with 'y' option
apt-get update
apt-get install -y nginx

# Ensure nginx is listening on port 80
sed -i 's/80 default_server;/80 default_server;\n        listen 80;/g' /etc/nginx/sites-available/default

# Restart nginx without using systemctl
kill -s HUP $(cat /var/run/nginx.pid)

# Create index.html with "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Verify nginx is running
ps aux | grep nginx | grep -v grep > /dev/null
if [ $? != 0 ]; then
    echo "Nginx failed to start."
    exit 1
fi

# Test nginx response
curl -s localhost | grep -q "Hello World!"
if [ $? != 0 ]; then
    echo "Nginx did not return 'Hello World!'"
    exit 1
fi

echo "Nginx installed and configured successfully."

#!/usr/bin/env bash
# This script configures Nginx to add a custom HTTP response header

# Install Nginx if not already installed
if ! command -v nginx &> /dev/null; then
    sudo apt-get update
    sudo apt-get install -y nginx
fi

# Add custom header configuration to Nginx
sudo bash -c 'cat > /etc/nginx/conf.d/custom_response_header.conf' << EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    server_name _;

    location / {
        add_header X-Served-By \$emmanuelmabhena.tech;
        proxy_pass http://localhost:5000; # Replace with your actual upstream server if needed
    }
}
EOF

# Reload Nginx to apply the changes
sudo systemctl reload nginx
